- if @access_token
  %h2 Decoded Access Token
  %pre= @access_token.pretty_inspect
- if @token_set
  %h2 Rest of token_set
  %strong expires_in:
  %span= @token_set["expires_in"]
  %hr
  %strong token_type:
  %span= @token_set["token_type"]
  %hr
  %strong scope:
  %code= @token_set["scope"]
  %hr
- else
  %a{href: "#{@auth_url}"}
    %img{src: "https://developer.xero.com/static/images/documentation/ConnectToXero2019/connect-blue.svg"}
